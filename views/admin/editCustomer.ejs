<%- include('../partials/head-admin')%>

  <body class="body-add">
    <section class="container-formAdd boxShadow">
      <h2>Editar Usuario</h2>
      <form action="/admin/user/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <section class="form-group">
          <div>
            <label for="name" class="label-filter">Nombres</label>
            <input type="text" name="name" class="input-filter" value="<%= user.username%>">
          </div>
          <div>
            <label for="email" class="label-filter">Email</label>
            <input type="email" name="email" class="input-filter" value="<%= user.email %>">
          </div>
            <label for="pass" class="label-filter">Contraseña actual</label>
            <input type="password" name="pass" class="input-filter" value="<%= user.password %>">
          </div>
          <div>
            <label for="confirmpass" class="label-filter">Confirmación Contraseña</label>
            <input type="password" name="confirmpass" class="input-filter" value="<%= user.password2 %>">
          </div>
            <input type="hidden" name="image" value="<%= user.image%>" />
            <label for="image" class="label-filter">Imagen</label>
            <img id="imageEdit" src=<%="/images/avatars/" +customer.image %> alt="<%= user.image %>" title="
              <%=user.image %>"><input type="file" name="image" class="input-filter">
          </div>
        </section>
        <section class="flexV containerBtn">
          <a href="/admin/user" class="btn-cancel ">Cancelar</a>
          <button type="submit" class="btn-add">Editar</button>
        </section>
      </form>
    </section>
  </body>

  </html>